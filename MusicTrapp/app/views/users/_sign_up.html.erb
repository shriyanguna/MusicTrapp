<%= form_for(:user, url: users_path, :html => {:id => "sign-up"}) do |f| %>
  <div>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, :placeholder => "First Name" %>
  </div>


  <div>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, :placeholder => "Last Name" %>
  </div>


  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
  </div>


  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
  </div>

  <div>
    <%= f.label :profile_picture %><br />
    <%= f.file_field :profile_pic %>
  </div>

 <br>

  <div>
    <%= f.submit "Sign Up" %>
  </div>

  <%= link_to "Already have an account?" %>
<% end %>